rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Portfolio Projects Collection
    // - Public read access (visitors can view your portfolio)
    // - Write access only for authenticated users (admin only)
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule for any other collections
    // - Public read access
    // - Write access only for authenticated users
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
